<!--pages/pets/form.wxml-->
   
<view class="page">
  <view class="page-body">
    <form bindsubmit="formSubmit">
    <!-- Name -->
    <view class="page-section">
        <wux-cell 
        hover-class="none"
        >
          <wux-input 
          label="Name"
          value="{{ name }}"
          bind:change="inputName"
          label="Name" 
          placeholder="type here" />
        </wux-cell>
      </view>
    <!-- Gender -->
      <wux-popup-select
        value="{{ value1 }}"
        options="{{ options1 }}"
        data-index="1"
        bind:confirm="onConfirm"
        bind:valueChange="onValueChange"
      >
        <wux-cell title="Gender" is-link extra="{{ displayValue1 }}"></wux-cell>
      </wux-popup-select>
    <!-- Species -->
      <wux-popup-select
        value="{{ value2 }}"
        options="{{ options2 }}"
        data-index="2"
        bind:confirm="onConfirm"
        bind:valueChange="onValueChange"
      >
        <wux-cell title="Species" is-link extra="{{ displayValue2 }}"></wux-cell>
      </wux-popup-select>
    <!-- Size -->
      <wux-popup-select
        value="{{ value3 }}"
        options="{{ options3 }}"
        data-index="3"
        bind:confirm="onConfirm"
        bind:valueChange="onValueChange"
      >
        <wux-cell title="Size" is-link extra="{{ displayValue3 }}"></wux-cell>
      </wux-popup-select>
    <!-- Age -->
      <wux-cell hover-class="none">
        <wux-input
          label="Age"
          value="{{ age }}"
          controlled
          type="number"
          bind:change="inputAge"
        />
      </wux-cell>
    <!-- Neutered & Vaccinated & Special need-->
    <wux-cell-group title="Health related information">
      <wux-cell name="neutered">
        <text>Neutered</text>
        <wux-switch
          name="neutered"
          value="{{ neutered }}"
          bindchange="inputNeutered"
          slot="footer"
        > 
        </wux-switch>
      </wux-cell>

      <wux-cell name="vaccinated">
        <text>First Vaccination</text>
        <wux-switch
          name="vaccinated"
          value="{{ vaccinated }}"
          bindchange="inputVaccinated"
          slot="footer"
        > 
        </wux-switch>
      </wux-cell>

      <wux-cell name="special_need">
        <text>Special Need</text>
        <wux-switch
          name="special_need"
          value="{{ special_need }}"
          bindchange="inputSpecialNeed"
          slot="footer"
        > 
        </wux-switch>
      </wux-cell>
    </wux-cell-group>
    <!-- Image Upload -->
    <wux-upload
      listType="picture-card"
      defaultFileList="{{ fileList }}"
      max="4"
      url="https://www.skyvow.cn/api/common/file"
      bindtap="uploadImg"
      bind:preview="onPreview"
      bind:remove="onRemove"
    >
      <image src="{{ imageUrl }}" wx:if="{{ imageUrl }}" />
      <text wx:else>Upload</text>
    </wux-upload>

    <!-- Character -->
    <wux-cell-group title="Additional information">
      <wux-cell hover-class="none">
        <wux-textarea
          hasCount
          rows="3"
          cursorSpacing="80"
          bind:change="inputAddInfo"
        />
      </wux-cell>
    </wux-cell-group>

    <!-- Buttons -->
      <view class="page-section">
        <button style="margin: 30rpx 0" type="primary" formType="submit">Submit</button>
        <button style="margin: 30rpx 0" formType="reset">Reset</button>
      </view>
    </form>
  </view>
</view>

