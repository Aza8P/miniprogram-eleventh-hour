<!--pages/pets/form.wxml-->

   
<view class="page">
  <view class="page-body">
    <form bindsubmit="create">      
    <wux-cell-group title="Basic information">
        <!-- Name -->
        <wux-cell 
        hover-class="none"
        >
          <wux-input 
          label="Name"
          controlled
          type="text"
          maxlength="10"
          value="{{formData.name}}"
          bind:change="inputName"
         />
        </wux-cell>
        <!-- Age -->
        <wux-cell >
            <wux-input 
            label="Age"
            controlled
            type="text"
            maxlength="10"
            value="{{formData.age}}"
            bind:change="inputAge" 
            />
        </wux-cell>
        <!-- Gender -->
          <wux-popup-select
            options="{{ options1 }}"
            data-index="1"
            data-field="gender"
            value="{{value1}}"
            bind:confirm="onConfirm"
            bind:valueChange="onValueChange"
          >
            <wux-cell title="Gender" is-link extra="{{ formData.gender }}"></wux-cell>
          </wux-popup-select>
        <!-- Species -->
          <wux-popup-select
            value="{{ value2 }}"
            options="{{ options2 }}"
            data-index="2"
            data-field="species"
            bind:confirm="onConfirm"
            bind:valueChange="onValueChange"
          >
            <wux-cell title="Species" is-link extra="{{ formData.species }}"></wux-cell>
          </wux-popup-select>
        <!-- Size -->
          <wux-popup-select
            value="{{ value3 }}"
            options="{{ options3 }}"
            data-index="3"
            data-field="size"
            bind:confirm="onConfirm"
            bind:valueChange="onValueChange"
          >
            <wux-cell title="Size" is-link extra="{{ formData.size }}"></wux-cell>
          </wux-popup-select>
        </wux-cell-group>
    <!-- Neutered & Vaccinated & Special need-->
      <wux-cell-group title="Health related information">
        <wux-cell name="neutered">
          <text>Neutered</text>
          <wux-switch
            name="neutered"
            value="{{ formData.neutered }}"
            bindchange="inputNeutered"
            slot="footer"
          > 
          </wux-switch>
        </wux-cell>
        <wux-cell name="vaccinated">
          <text>First Vaccination</text>
          <wux-switch
            name="vaccinated"
            value="{{ formData.vaccinated}}"
            bindchange="inputVaccination"
            slot="footer"
          > 
          </wux-switch>
        </wux-cell>


        <wux-cell name="special_need">
          <text>Special Need</text>
          <wux-switch
            name="special_need"
            value="{{ formData.special_need }}"
            bindchange="inputSpecialNeed"
            slot="footer"
          > 
          </wux-switch>
        </wux-cell>
        </wux-cell-group>
    <!-- Image Upload -->
      <wux-cell-group title="Upload an image" >
        <view class="image-card" bindtap="chooseImage" >
        <image src="{{src}}" style="width: 156rpx; height: 156rpx;" mode="aspectFill"/></view>
      </wux-cell-group>
    <!-- Description -->
      <wux-cell-group title="Additional information">
        <wux-cell hover-class="none">
          <wux-textarea
            hasCount
            rows="3"
            controlled
            value="{{formData.description}}"
            cursorSpacing="80"
            bind:change="inputAddInfo"
          />
        </wux-cell>
        </wux-cell-group>
    <!-- Buttons -->
      <view class="btn-area">
        <button class="btn" plain="true" type="primary" formType="submit">Submit</button>
        <button class="btn" plain="true" bindtap="resetForm">Reset</button>
        </view>
    </form>
  </view>
</view>

