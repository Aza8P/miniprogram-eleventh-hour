/* pages/pets/index.wxss */
page {
  margin: 0;
  padding-bottom: 50rpx;
}
.language-btn {
  position: absolute;
  top: 25rpx;
  right: 25rpx;
  padding: 0rpx;
  /* background-color: orange; */
  font-size: 30rpx;
}

.header {
  margin-bottom: 20rpx
}

.logo-box {
  height: 200rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  /* border: 1px solid #C5EBE7; */
  margin-bottom: 50rpx;
}

.logo-and-heading {
  display: flex;
  flex-direction: column;
}

.ehr-heading {
  font-size: 40rpx;
  font-weight: bold;
  margin-left: 40rpx;
}

.ehr-logo {
  width: 200rpx;
}

.content-box {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15rpx;
  margin: 15rpx;
  background-color: #C5EBE7;
  border-radius: 30rpx;
}

.ehr-title {
  font-size: 35rpx;
  color: #FD5200;
  font-weight: bold;
}

.ehr-content {
  /* font-size: 32rpx; */
  padding: 15rpx;
}

.more-link {
  text-decoration-line: underline;
  color:#FD5200;
}

/* pet event swiper */
.swiper-swiper {
  position: relative;
  margin: 20rpx;
  height: 360rpx;
}

.event-swiper {
  height: 360rpx;
}

.event-image {
  background-size:cover;
  height: 360rpx;
  text-align: end;
}

.filter {
  position: absolute;
  background-color: black;
  opacity: 25%;
  width: 100%;
  height: 100%;
}

.event-name {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  font-size: 35rpx;
  font-weight: bold;
  color: white;
}

.event-location {
  position: absolute;
  top: 70rpx;
  right: 20rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: white;
}

.event-time {
  position: absolute;
  top: 120rpx;
  right: 20rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: white;
}

/* pet tags */
.scroll-view-box-box {
  margin: 0 40rpx;
  position: relative;
}

.tags-scroll-view {
  margin-top: 30rpx;
  height: 160rpx;
}

.tag-scroll-filter {
  position: absolute;
  right: 0;
  width: 30%;
  height: 100%;
  z-index: 1;
}

.inner-tag-view {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tag-button {
  box-shadow: 0 0 15rpx rgba(0,0,0,0.2);
  height: 132rpx;
  width: 300rpx;
  margin: 5rpx 20rpx;
  /* border: 1px solid #FD5200; */
  border-radius: 45rpx;
  display: inline-block;
  justify-content: center;
  align-items: center;
  color: #FD5200;
  margin-top: 16rpx;
  position: relative;
}

.selected-tag-img {
  width: 20px;
  height: 20px;
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  border-radius: 50%;
}

/* .tags-scroll-view .tag-button:nth-child(1) {
  margin-left: 10rpx;
} */

.tag-img {
  height: 80rpx;
  width: 80rpx;
  margin-bottom: 5rpx;
}

.tag-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #FD5200;
}

/* pet cards */
.pet-cards-box {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-gap: 50rpx;
  margin: 50rpx;
}

.pet-card {
  position: relative;
  border-radius: 20rpx;
  width: 300rpx;
  height: 470rpx;
  box-shadow: 0 0 15rpx rgba(0,0,0,0.2);
  font-family:'Fira Sans', sans-serif;
}

.image-box {
  display: flex;
  justify-content: center;
}

.pet-image {
  border-radius: 20rpx 20rpx 0 0;
  box-shadow: 0 0 15rpx rgba(0,0,0,0.2);
  width: 300rpx;
  height: 300rpx;
}

.pet-info {
  color: black;
  margin: 18rpx;
  display: flex;
  flex-direction: column;
  height: 140rpx;
  justify-content: space-between;
  box-sizing: border-box;
  font-size: 30rpx;
}