<!--pages/pets/show.wxml-->

  <!-- 1.pet image -->
  <view class="pet-img">
    <image class="pet-avt" mode="aspectFill" src="{{pet.image_url}}"></image>
  </view>
  
  <!-- 2.pet info -->
  <view class="bottom-container">
    <view class="pet-card">
      <view class="pet-name"> {{pet.name}}</view>
        <view class="pet-info">
          <view>
            <view> Age: {{pet.age}}</view>
            <view> Gender: {{pet.gender}}</view>
            <view> Status: {{pet.adoption_status}}</view>
          </view>
          <view>
            <view> Neutered: {{pet.neutered}}</view>
            <view> Vaccinated: {{pet.vaccination}}</view>
            <view> Special Need: {{pet.special_need}}</view>
          </view>
        </view>
    </view>
  
  <!-- 3.adopt button -->
    <view class="buttons-card">
      <view class="adopt-card" wx:if="{{(!isCreater)&&(!isBooker)}}">
        <button style="width:60vw" class="adopt-btn" bindtap="showBookingWindow">apply to adopt</button>
      </view>
    </view>
  </view>