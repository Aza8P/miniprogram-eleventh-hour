<!--pages/pets/show.wxml-->

  <!-- 1.pet image -->
  <view class="pet-img">
    <image class="pet-avt" mode="aspectFill" src="{{pet.image_url}}"></image>
  </view>
  
  <!-- 2.pet info -->
  <view class="bottom-container">
    <view class="pet-card">
        <view class="pet-name"> {{pet.name}}
					<view class="special-need" wx:if="{{ specialNeedDisplay == 'yes' }}">special need</view>
				</view>
        <view class="pet-info">
          <view>
            <view>Age: <text class="info-text">{{pet.age}}</text></view>
            <view>Gender: <text class="info-text">{{pet.gender}}</text></view>
            <view>Status: <text class="info-text">{{adoptionStatus}}</text></view>
          </view>
          <view>
            <view class="yes-no"> 
							<view>Neutered: </view>
							<image class="status-icon" src="{{ neuteredDisplay == 'yes' ? '/images/yes.png' : '/images/cross.png'}}"></image>
						</view>
            <view class="yes-no"> 
							<view>Vaccinated:</view>
							<image class="status-icon" src="{{ vaccinatedDisplay == 'yes' ? '/images/yes.png' : '/images/cross.png'}}"></image>
						</view>
            <view> Size: <text class="info-text">{{pet.size}}</text></view>
          </view>
        </view>
  <!-- 3. add info container -->
			<view class="more-info">
				<text class="info-title">Description</text>
				<text class="info-text">{{pet.description}}</text>
				<!-- <view class="special-need" wx:if="{{ specialNeedDisplay == 'yes' }}">special need</view> -->
			</view>

  	</view>
  
  <!-- 4.adopt button -->
    <view class="buttons" wx:if="{{!isAdmin && !isBooker}}">
      <button class="btn-adopt" bindtap="createBooking" open-type="getUserInfo" bindgetuserinfo="handleGetUserInfo">Adopt</button>
      <button open-type="share" class="btn-share">Share</button>
    </view>
		<view class="buttons" wx:if="{{isAdmin}}">
      <button type="default" plain="true" class="btn" bindtap="edit">Edit</button>
      <button type="delete" plain="true" open-type="share" bindtap="delete">Delete</button>
    </view>
  </view>
