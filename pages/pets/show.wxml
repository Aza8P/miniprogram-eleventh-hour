<!--pages/pets/show.wxml-->

  <!-- 1.pet image -->
  <view class="pet-img">
    <image class="pet-avt" mode="aspectFill" src="{{pet.image_url}}"></image>
  </view>
  
  <!-- 2.pet info -->
  <view class="bottom-container">
    <view class="pet-card">
        <view class="pet-name"> {{pet.name}}
					<view class="special-need" wx:if="{{ specialNeedDisplay == 'yes' }}">{{content.special}}</view>
				</view>
        <view class="pet-info">
          <view>
            <view>{{content.age}}<text class="info-text">{{pet.age}}</text></view>
            <view class="gender-box">
							{{content.gender}}<image class="pet-gender-icon" src="{{ pet.gender == 'male' ? '/images/boy.png' : '/images/girl.png'}}"></image>
						</view>
            <view>{{content.status}}<text wx:if="{{adoptionStatus == 'available'}}" class="info-text">{{content.available}}</text><text wx:if="{{adoptionStatus == 'not available'}}" class="info-text">{{content.unavailable}}</text>
						</view>
          </view>
          <view>
            <view class="yes-no"> 
							<view>{{content.neutered}}</view>
							<image class="status-icon" src="{{ neuteredDisplay == 'yes' ? '/images/yes.png' : '/images/cross.png'}}"></image>
						</view>
            <view class="yes-no"> 
							<view>{{content.vaccinated}}</view>
							<image class="status-icon" src="{{ vaccinatedDisplay == 'yes' ? '/images/yes.png' : '/images/cross.png'}}"></image>
						</view>
            <view>{{content.size}}
							<text wx:if="{{pet.size == 'mini'}}" class="info-text">{{content.mini}}</text>
							<text wx:if="{{pet.size == 'small'}}" class="info-text">{{content.small}}</text>
							<text wx:if="{{pet.size == 'medium'}}" class="info-text">{{content.medium}}</text>
							<text wx:if="{{pet.size == 'large'}}" class="info-text">{{content.large}}</text>
						</view>
          </view>
        </view>
  <!-- 3. add info container -->
			<view class="more-info">
				<text class="info-title">{{content.description}}</text>
				<text class="info-text">{{pet.description}}</text>
				<!-- <view class="special-need" wx:if="{{ specialNeedDisplay == 'yes' }}">special need</view> -->
			</view>

  	</view>
  
  <!-- 4.adopt button -->
    <!-- <view class="buttons" wx:if="{{!isAdmin && !isBooker}}">
			<button open-type="share" class="btn-share">{{content.share_btn}}</button>
      <button class="btn-adopt" bindtap="createBooking" open-type="getUserInfo" bindgetuserinfo="handleGetUserInfo">{{content.adopt_btn}}</button>
    </view> -->
    <view class="buttons" wx:if="{{!isAdmin}}">
			<button open-type="share" class="btn-share">{{content.share_btn}}</button>
      <button class="btn-sent" bindtap="toggleBooking">{{ isBooker ? 'Unfavorite' : 'Favorite'}}</button>
    </view>
		<view class="buttons" wx:if="{{isAdmin}}">
			<button class="btn-delete" bindtap="delete">Delete</button>
      <button class="btn-edit" bindtap="edit">Edit</button>
    </view>
  </view>
