.page {
  padding-top: 30rpx;
  padding-bottom: 150rpx;
}

.btn-area {
  display: flex;
  margin: 20rpx;
  display: flex;
	gap: 20rpx;
	margin-top: 70rpx;
}

.btn-submit {
	background-color: #00B5A3;
	color: white;
	border-radius: 40rpx;
}

.btn-reset {
	background-color: white;
	color: grey;
	border: 1px solid grey;
	border-radius: 40rpx;
}

.image-card {
  width: 156rpx;
  height: 156rpx;
  border: 1PX dashed #d9d9d9;
  border-radius: 8rpx;
  margin: 0rpx 0rpx 0rpx 25rpx;
  background-color: #fafafa;
  transition: border-color .3s ease;
  /* box-sizing: border-box; */
