/* pages/pets/show.wxss */

/* pet image */
.pet-img {
  z-index: 2;
  width: 100vw;
  height: 700rpx;
  position: sticky;
  top: 0;
  background-color: rgb(177, 171, 171);
}

.pet-avt {
  height: 700rpx;
  object-fit: cover;
  /* margin-bottom: 50rpx; */
  width: 100%;
}

/* pet card */
.pet-card {
  padding: 20rpx;
}

.pet-name {
  font-size: 40rpx;
  font-weight: bold;
  color: black;
  padding-bottom: 10rpx;
}

.pet-info {
  padding: 10rpx 0;
  display: flex;
  justify-content: space-evenly;
  background-color: lavenderblush;
}

.adopt-btn {
  background-color: #00B5A3;
  color: white;
}

.bottom-container {
  z-index: 1;
  border: 1px solid black;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  margin-top: -40rpx;
  background-color: white;
  padding: 20rpx;
  min-height: 60vh;
}


  