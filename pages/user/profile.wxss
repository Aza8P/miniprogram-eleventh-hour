/* pages/user/profile.wxss */
.main {
	padding-left: 10rpx;
	padding-right: 10rpx;
  flex-direction: column;
  padding-bottom: 150rpx;
}

.header {
  height: 180rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.header-box {
  height: 180rpx;
	align-items: center;
  border: 1px solid #FD5200;
  border-radius: 20rpx;
}

.authorize-box {
	justify-content: center;
}

.authorize-btn {
	margin-top: 40rpx;
}

.user-box {
	margin-left: 30rpx;
	margin-top: 30rpx;
	display: flex;
	align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: inline-block;
  overflow: hidden;
	border: 1rpx solid grey;
}

.user-name {
  font-size: 30rpx;
  margin-left: 20rpx;
}

.contact-box {
	height: 100rpx;
}

.contact-btn {
	display: flex;
	justify-content: center;
	border-radius: 10rpx;
	padding: 15rpx;
}

.msg-icon {
	width: 40rpx;
	height: 40rpx;
	margin-top: 4rpx;
	margin-right: 8rpx;
}

.tabs-box {
  height: 100rpx;
  display: flex;
  justify-content: start;
  align-items: start;
	margin-top: 10rpx;
	padding-left: 12rpx;
}

.request-tab {
	width: 330rpx;
  display: flex;
  flex-direction: column;
	justify-content: center;
	align-items: center;
}

.highlight{
  margin-bottom: 15rpx;
  padding: 10rpx;
  background-color: #eeccbc;
  height: 5rpx;
  width: 220rpx;
  border-radius: 20rpx;
}

.tab-title{
	font-size: 34rpx;
  font-weight: bold;
}

.requests-box {
	padding: 20rpx;
}

.card {
  z-index: 1;
  position: relative;
}

.delete-request {
	position: absolute;
	left: 580rpx;
	top: 20rpx;
  z-index: 2;
  height: 52rpx;
  width: 60rpx;
  padding: 10rpx;
  display: flex;
  justify-content: center;
  align-content: center;
}

.empty-box {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	margin-top: 50rpx;
}

.empty-message {
	text-align: center;
  padding: 15rpx;
  margin: 15rpx;
  background-color: #eeccbc;
	border-radius: 20rpx;
	width: 500rpx;
}

.pet-length {
  color: #ebaf93;
}

.max-length {
  color: grey;
}