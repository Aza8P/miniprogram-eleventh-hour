.contact-box {
	height: 100rpx;
	margin-top: 20rpx;
	margin-bottom: 50rpx;
	display: flex;
	align-items: center;
}

.contact-btn {
	display: flex;
	justify-content: center;
	background-color:#FD5200;
	color: white;
	border-radius: 40rpx;
}

.msg-icon {
	width: 40rpx;
	height: 40rpx;
	margin-top: 4rpx;
	margin-right: 8rpx;
}

.tabs-box {
  height: 100rpx;
  display: flex;
  justify-content: start;
  align-items: start;
}

.request-tab {
	width: 330rpx;
  display: flex;
  flex-direction: column;
	justify-content: center;
	align-items: center;
}

.highlight{
  margin-bottom: 15rpx;
	padding: 10rpx;
  background-color: #eeccbc;
  height: 5rpx;
  width: 220rpx;
  border-radius: 20rpx;
}

.tab-title{
	font-size: 34rpx;
  font-weight: bold;
}

.requests-box {
	padding: 35rpx;
	padding-left: 40rpx;
	padding-right: 40rpx;
}

.delete-request {
	position: absolute;
	left: 566rpx;
	top: 26rpx;
  z-index: 2;
  height: 52rpx;
  width: 60rpx;
}

.empty-box {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	margin-top: 50rpx;
}

.empty-message {
	text-align: center;
  padding: 15rpx;
  margin: 15rpx;
  background-color: #eeccbc;
	border-radius: 20rpx;
	width: 500rpx;
}

.pet-length {
  color: #ebaf93;
}

.max-length {
	color: grey;
}

.pet-card {
  z-index: 1;
	position: relative;
	box-shadow: 0 0 15rpx rgba(0,0,0,0.1);
	border-radius: 40rpx;
	display: flex;
	justify-content: flex-start;
}

.pet-title {
	display: flex;
	justify-content: flex-start;
	align-items: flex-start;
	padding: 30rpx;
	width: 490rpx;
}

.pet-avatar {
	width: 200rpx;
  height: 200rpx;
	border-radius: 40rpx;
	box-shadow: 0 0 15rpx rgba(0,0,0,0.1);
}

.name-box {
	margin-left: 20rpx;
	display: flex;
	justify-content: start;
	align-items: center;
}

.pet-name {
	font-size: 40rpx;
	font-weight: 500;
	color:grey;
}

.pet-gender-icon {
  width: 35rpx;
  height: 35rpx;
  margin-left: 10rpx;
}