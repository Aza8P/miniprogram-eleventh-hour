/* pages/user/form.wxss */
.main {
  background: #ffffff;
  margin-top: 40rpx;
  height: 100vh;
  padding-left: 50rpx;
  padding-right: 50rpx;
  /* font-family: Montserrat; */
}

.header-content {
  display: flex;
  flex-direction: column;
  text-align: center;
  padding: 20rpx;
}

.page-title {
  font-size: 40rpx;
  color: #FD5200;
  font-weight: bold;
}

.picker{
  padding: 16rpx;
}

.form-box {
  color: #404040;
  font-size: 12pt;
  padding-bottom: 100rpx;
}

.form-item {
  margin-bottom: 20rpx;
}

.form-item-title {
  font-weight: bold;
}

input {
  background-color: #F0EFEF;
  border-radius: 20rpx;
  padding: 14rpx;
  margin-top: 14rpx;
  padding-left: 40rpx;
  /* font-family: Montserrat; */
  font-size: 12pt;
}

textarea {
  background-color: #F0EFEF;
  border-radius: 20rpx;
  width: 94%;
  height: 200rpx;
  margin-top: 14rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.form-btn {
  display: flex;
  justify-content: space-between;
  margin-top: 80rpx;
}

.cancel-btn {
  background-color: white; 
  border-radius: 32rpx; 
  border: 1px solid grey; 
  color: grey; 
}

.submit-btn {
  background-color: #FD5200; 
  border-radius: 32rpx; 
  color:white;
}