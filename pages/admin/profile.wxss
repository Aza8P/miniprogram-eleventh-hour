/* pages/admin/profile.wxss */
.main {
  flex-direction: column;
  padding-bottom: 20rpx;
}

.header {
  height: 250rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
  padding: 20rpx;
}

.admin-box {
  margin: 0 auto;
  display: flex;
  margin-bottom: 30rpx;
}

.profilepic {
  height: 150rpx;
  width: 150rpx;
  margin-left: 30rpx;
}

.page-content {
  display: flex;
  flex-direction: column;
  text-align: start;
  padding: 30rpx;
}

.page-title {
  font-size: 40rpx;
  color: #00B5A3;
  font-weight: bold;
}

.application-info {
  margin-bottom: 40rpx;
  padding: 20rpx;
  background-color: rgb(245, 241, 233);
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  border-radius: 20rpx;
}

.all-btn {
  background-color: transparent;
  border-radius: 20rpx;
  border: 1px solid grey;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.25);
  width: 150rpx;
  height: 50rpx;
  text-align: center;
  font-size: 35rpx;
}

.listing-info {
  margin-bottom: 40rpx;
  padding: 20rpx;
  background-color: rgb(245, 241, 233);
  border-radius: 20rpx;
}

.event-info {
  margin-bottom: 40rpx;
  padding: 20rpx;
  background-color: rgb(245, 241, 233);
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  border-radius: 20rpx;
}

.faq-info {
  margin-bottom: 40rpx;
  padding: 20rpx;
  background-color: rgb(245, 241, 233);
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  border-radius: 20rpx;
}

.info-title {
  font-size: 40rpx;
  font-weight: bold;
}

.info-edit {
  background-color: transparent;
  border-radius: 20rpx;
  border: 1px solid grey;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.25);
  width: 150rpx;
  height: 50rpx;
  text-align: center;
  font-size: 35rpx;
}

/* APPLICATION SCROLL VIEW */
.application-scroll-view-box {
  margin: 0 10rpx;
  position: relative;
  margin-bottom: 40rpx;
}

.scroll-view {
  height: 200rpx;
}

.inner-view {
  box-shadow: 0 0 10rpx rgba(0,0,0,0.2);
  height: 150rpx;
  width: 280rpx;
  margin: 5rpx 10rpx;
  border: 1px solid transparent;
  border-radius: 15rpx;
  display: inline-block;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  color: grey;
  position: relative;
}

.view-info {
  display: flex;
  align-items:flex-end;
  margin-left: 10rpx;
}

.info-text {
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.user-name {
  font-weight: bold;
  font-size: 30rpx;
}
