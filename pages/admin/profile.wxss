/* pages/admin/profile.wxss */
.main {
	padding-left: 10rpx;
	padding-right: 10rpx;
	flex-direction: column;
  padding-bottom: 150rpx;
}

.header {
  height: 260rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.header-box {
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction: column;
	height: 260rpx;
  border: 1px solid #00B5A3;
  border-radius: 20rpx;
}

.authorize-box {
	justify-content: center;
}

.authorize-btn {
	background-color: white;
	border: 1px solid grey;
	border-radius: 40rpx;
	color: grey;
}

.user-box {
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction: column;
}

.avatar {
  width: 108rpx;
  height: 108rpx;
  border-radius: 50%;
  /* display: inline-block;
	overflow: hidden; */
	border: 1rpx solid grey;
}

.input-username {
	text-align: center;
}

.user-user {
	color: rgba(0,0,0,.65);
	font-weight: 350;
}

.name-box {
  font-size: 30rpx;
}

.tabs-box {
  height: 100rpx;
  display: flex;
  justify-content: start;
  align-items: start;
	margin-top: 10rpx;
}

.request-tab {
	width: 330rpx;
  display: flex;
  flex-direction: column;
	justify-content: center;
	align-items: center;
}

.highlight{
  margin-bottom: 15rpx;
  padding: 10rpx;
  background-color: #C5EBE7;
  height: 5rpx;
  width: 220rpx;
  border-radius: 20rpx;
}

.tab-title{
	font-size: 34rpx;
  font-weight: bold;
}

.user-list {
	padding: 20rpx;
}

.user-avatar {
	border-radius: 50%;
	width: 100rpx;
  height: 100rpx;
  background-position: center;
	background-size: cover;
	display: flex;
	align-items:center;
	margin-right: 20rpx;
}

.id-box {
	font-size: 28rpx;
}

.user-header {
	display: flex;
	align-items: center;
}

.user-card {
  display: flex;
	flex-direction: column;
	vertical-align: middle;
  background-color: #fff;
  padding: 20px;
  box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px;
	border-radius: 5px;
	position: relative;
}

.delete-request {
	position: absolute;
	left: 588rpx;
	top: 34rpx;
  z-index: 2;
  height: 52rpx;
  width: 60rpx;
  padding: 10rpx;
  display: flex;
  justify-content: center;
  align-content: center;
}

.pet-gallery {
	display: flex;
	margin-top: 15px;
	justify-content: center;
	align-items: center;
	
}

.pet-card {
  width: 120rpx;
  height: 120rpx;
	border-radius: 50%;
	border: 0.5px solid black;
	overflow: hidden;
	margin-left: -40rpx;
	position: relative;
}


.pet-image {
  width: 100%;
  height: 100%;
  background-repeat: no-repeat;
  background-position: center;
	background-size: cover;
	border-radius: 50%;
  position: absolute;
  top: -10%;
  left: -10%;
}



