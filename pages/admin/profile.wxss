/* pages/admin/profile.wxss */
.main {
  flex-direction: column;
  padding-bottom: 20rpx;
}

.header {
  height: 250rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
  padding: 20rpx;
}

.admin-box {
  margin: 0 auto;
  display: flex;
  margin-bottom: 30rpx;
}

.profilepic {
  height: 150rpx;
  width: 150rpx;
  margin-left: 30rpx;
}

.page-content {
  display: flex;
  flex-direction: column;
  text-align: start;
  padding: 30rpx;
}

.page-title {
  font-size: 40rpx;
  color: #00B5A3;
  font-weight: bold;
}

.application-info {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: rgb(245, 241, 233);
}

.listing-info {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: rgb(245, 241, 233);
}

.event-info {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: rgb(245, 241, 233);
  display: flex;
  justify-content: space-between;
  height: 70rpx;
}

.faq-info {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: rgb(245, 241, 233);
  display: flex;
  justify-content: space-between;
  height: 70rpx;
}

.info-title {
  font-size: 40rpx;
  font-weight: bold;
}

.info-edit {
  background-color: transparent;
  border-radius: 20rpx;
  border: 1px solid grey;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.25);
  width: 150rpx;
  height: 50rpx;
  text-align: center;
  font-size: 35rpx;
}


/* APPLICATION SWIPER BOX */
.application-box {
  margin-bottom: 40rpx;
}

.application-swiper {
  font-family: Fira Sans;
  background-color: transparent;
  width: 620rpx;
  height: 400rpx;
}

.swiper-item{
  background-color: transparent;
}

.swiper-view{
  width: 100%; 
  height: 100%; 
  padding: 0;
  background-color:whitesmoke;
}

.user-image {
  width: 100%;
  height: 50%;
}

.user-info {
  padding: 10rpx 20rpx;
}

.user-name {
  font-weight: bold;
}
