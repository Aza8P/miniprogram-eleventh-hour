/* pages/admin/profile.wxss */
.main {
  flex-direction: column;
  padding-bottom: 20rpx;
}

.header {
  height: 200rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.header-box {
  height: 200rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border: 1px solid #00B5A3;
  border-radius: 20rpx;
}

.admin-box {
  display: flex;
}

.avatar {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
}

.user-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  padding: 20px;
  box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px;
  border-radius: 10px;
}

.user-card__name {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 20px;
}
.pet-gallery {
  display: flex;
  /* flex-direction: column; */
  /* align-items: center; */
  margin-top: 20px;
}

.pet-card {
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #ccc;
  border-radius: 10px;
  overflow: hidden;
  margin-bottom: 20px;
}

.pet-image {
  width: 100%;
  height: 70%;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
}

.pet-name {
  width: 100%;
  height: 30%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  font-weight: bold;
}

