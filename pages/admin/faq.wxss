/* pages/admin/faq.wxss */
.header {
  display: flex;
  flex-direction: column;
  text-align: center;
  padding: 20rpx;
}

.page-title {
  font-size: 40rpx;
  color: #FD5200;
  font-weight: bold;
}

.ehr-content {
  margin-bottom: 20rpx;
}

.page-content {
  padding: 40rpx;
}

.about {
	color: #444;
	font-size: 28rpx;
	text-align: start;
	margin-bottom: 40rpx;
}

.faq-icon {
	margin-right: 10rpx;
}

.faq-title {
	font-size: 32rpx;
	font-weight: 450;
}

.question {
	font-size: 28rpx;
	font-weight: 450;
	background-color: #eeeeee;
	color: #444;
	cursor: pointer;
	/* padding: 28rpx; */
	padding: 8rpx;
	padding-left: 28rpx;
	padding-right: 28rpx;
	border: none;
	/* text-align: left; */
	outline: none;
	display: flex;
	justify-content: space-between;
}

.delete-box {
	display: flex;
}

.delete-question {
	margin-right: 20rpx;
}

.question-title {
	display: flex;
	justify-content: space-between;
	width: 700rpx;
}

.active, .question:hover{
	background-color: #ccc;
}

.answer {
	color: #444;
	text-align: left;
	padding-left: 28rpx;
	padding-top: 14rpx;
	padding-bottom: 40rpx;
	font-size: 28rpx;
	font-weight: 400;
}

.add-icon {
	display: flex;
	flex-direction: column;
	align-items: center;
	margin-top: 40rpx;
}

.add-input {
	border: 1px solid #ccc;
	height: 32;
	width: 600rpx;
	padding: 10rpx;
	font-size: 28rpx;
	margin: 10rpx auto
}

.add-faq-form {
	margin-top: 40rpx;
}

.btn-faq {
	margin-top: 40rpx;
}

.add-faq-container {
	padding-bottom: 150rpx;
}